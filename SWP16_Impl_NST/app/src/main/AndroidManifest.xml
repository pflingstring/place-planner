<?xml version="1.0" encoding="utf-8"?>
<manifest package="swp.swp16_impl_nst"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".locations.LocationsMainActivity">
        </activity>
        <activity
            android:name=".locations.LocationItemActivity"
            android:parentActivityName=".locations.LocationsMainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.LocationsMainActivity"/>
        </activity>
        <activity
            android:name=".locations.LocationDetailsActivity"
            android:label="@string/title_activity_location_details"
            android:parentActivityName=".locations.LocationsMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="swp.swp16_impl_nst.locations.LocationsMainActivity"/>
        </activity>
    </application>

</manifest>