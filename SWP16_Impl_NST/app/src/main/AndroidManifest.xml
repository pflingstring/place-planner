<?xml version="1.0" encoding="utf-8"?>
<manifest package="swp.swp16_impl_nst"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".locations.views.LocationsMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".locations.views.LocationTabbedActivity"
            android:label="@string/title_activity_location_details"
            android:parentActivityName=".locations.views.LocationsMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.views.LocationsMainActivity"/>
        </activity>
        <activity
            android:name=".locations.views.LocationAddActivity"
            android:label="@string/title_activity_location_add"
            android:parentActivityName=".locations.views.LocationsMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.views.LocationsMainActivity"/>
        </activity>
        <activity
            android:name=".locations.views.LocationImportActivity"
            android:label="@string/title_activity_location_import"
            android:parentActivityName=".locations.views.LocationsMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.views.LocationsMainActivity"/>
        </activity>
        <activity
            android:name=".locations.views.LocationExportActivity"
            android:label="@string/title_activity_location_export"
            android:parentActivityName=".locations.views.LocationsMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.views.LocationsMainActivity"/>
        </activity>
        <activity android:name=".locations.views.LocationFilterActivity">
            android:parentActivityName=".locations.views.LocationsMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".locations.views.LocationsMainActivity"/>
        </activity>
    </application>

</manifest>